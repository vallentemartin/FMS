<div class="role">
    <section id="LDMSDashboard_role">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Land Data Management</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row" id="hideLDMSheader">
                                    <div class="col-sm-4">
                                        <div class="info-box mb-3">
                                            <span class="info-box-icon boxiconActive"><i class="far fa-file-alt"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text" id="activeContracts"></span>
                                                <span class="info-box-number activeContracts"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="info-box mb-3">
                                            <span class="info-box-icon boxiconExpiring"><i class="far fa-file-alt"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text" id="expiringContracts"></span>
                                                <span class="info-box-number expiringContracts"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="info-box mb-3">
                                            <span class="info-box-icon boxiconInactive"><i class="far fa-file-alt"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text" id="inactiveContracts"></span>
                                                <span class="info-box-number inactiveContracts"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix hidden-md-up"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-lg-5">
                                <div class="card card-primary">
                                <!-- <div class="card card-success card-outline"> -->
                                    <div class="card-header">
                                    <h3 class="card-title"><i class="far fa-chart-bar"></i> Donut Chart - Contract Status</h3>
                                    
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse" id="LDMSchartbutton">
                                        <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                    </div>
                                    <div class="card-body"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                                    <canvas id="donutChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block; width: 315px;" width="315" height="250" class="chartjs-render-monitor"></canvas>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div>
                            <div class="col-sm-12 col-lg-7">
                                <div class="card card-primary">
                                    <div class="card-header">
                                    <h3 class="card-title"><i class="far fa-chart-bar"></i> Bar Chart - Contract Status</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                    </div>
                                    <div class="card-body" style="display: block;">
                                        <div class="chart"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                                            <canvas id="barChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block; width: 672px;" width="672" height="250" class="chartjs-render-monitor"></canvas>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-lightblue">
                                <div class="card-header">
                                    <h3 class="card-title">List Of Land Contracts</h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        @*<button type="button" class="btn btn-tool" data-card-widget="remove">
                                                <i class="fas fa-times"></i>
                                            </button>*@
                                    </div>
                                </div>
                                <div class="card-body">
                                    <table id="tbl_ContractMain" class="table table-bordered table-striped table-sm" style="width:100%" data-viewpage="pages/landmanagement/modalpages/landcontract_view" data-approvepage="pages/home/modalpages/ldms_approveremarks">
                                        <thead>
                                            <tr style="text-align:center">
                                                <th class="LandContractCode">Land Contract Code</th>
                                                <th class="PlantationCode">Plantation Code</th>
                                                <th class="PaymentTerms">Payment Term</th>
                                                <th class="Status">Status</th>
                                                <th class="createdby">Created By</th>
                                                <th class="createdon">Created On</th>
                                                <th class="id">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbl_Users-data">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </section>
</div>
<script src="~/Scripts/Home/home.js"></script>