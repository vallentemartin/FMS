<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">List Of Activities</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            @*<button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>*@
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="tbl_Activity" class="table table-bordered table-striped table-sm" style="width:100%" data-editpage="pages/masterdata/modalpages/Activity_update" data-addpage="pages/masterdata/modalpages/Activity_add" >
                            <thead>
                                <tr style="text-align:center">
                                    <th class="id">Actions</th>
                                    <th class="ActivityCode">Activity Code</th>
                                    <th class="ActivityName">Activity Name</th>
                                    <th class="OperationName">Operation</th>
                                    <th class="UnitName">Unit</th>
                                    <th class="std">STD</th>
                                    <th class="PayType">Pay</th>
                                    <th class="isactive">Status</th>
                                    <th class="modifiedby">Last Modified By</th>
                                    <th class="modifiedon">Last Modified</th>
                                </tr>
                            </thead>
                            <tbody id="tbl_Users-data">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
